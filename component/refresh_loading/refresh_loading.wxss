/* components/refresh_loading/refresh_loading.wxss */
.refresh_loading{
  width: 60rpx;
  height: 60rpx;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  margin: auto;
  display: none;
  background: url(data:image/png;base64,) no-repeat center center/60rpx auto;
}
.refresh_loading.active{
  display: block;
  animation: rotate .8s ease infinite;
}
@keyframes rotate{
  0%{
    transform:rotateZ(0deg);
  }
  100%{
    transform: rotateZ(360deg);
  }
}